@{
    ViewBag.Title = "HETSAPI - Api Error";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>    
    
    <style>
        body {
            background-color: #fff;
            padding: 10px;
            font-family: Verdana, Geneva, sans-serif;
            font-size: 12pt;
        }        
    </style>
    
    <script language="javascript">
        function homeClick() {
            window.location.href = "/";
        }

        function updateUserId(userId) {
            userId = userId.trim();

            if (userId.length > 0) {
                window.location.href = "/api/authentication/dev/token/" + userId;
            }
        }
    </script>
</head>
<body>
    <h2>@ViewData["Title"]</h2>
    <hr />

    <h2>An error occurred while processing your request.</h2>

    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>

    <p>
        <strong>Error:</strong> <code>@Model.Message</code>
    </p>

    <hr />

    @if (Model.DevelopmentEnvironment)
    {
        <div>
            <button onclick="homeClick();">Home</button>
        </div>

        <hr />
        <div>
            <h3>Reset User Id</h3>
            <label>UserId:</label> <input text="" id="newUserId" />
            <button onclick="updateUserId(newUserId.value);">Override User Context</button>
        </div>
        }

    </body>
</html>